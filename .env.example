# .env.example
# This file contains the required environment variables for the application.
# Copy this file to .env.local and fill in the values.
# IMPORTANT: Do not commit .env.local to your version control.

# Firebase Client Configuration (for the browser)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_DATABASE_URL=

# Firebase Admin Configuration (for the server)
# These are secrets and must NOT be exposed to the public.
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Sentry Configuration (for error monitoring)
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# AI Provider Keys (At least one required)
GOOGLE_GENERATIVE_AI_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Google Cloud / Vertex AI Configuration (for advanced AI features)
GOOGLE_CLOUD_PROJECT=
GOOGLE_CLOUD_LOCATION=
# Vertex AI project details
VERTEX_AI_PROJECT_ID=
VERTEX_AI_LOCATION=
VERTEX_AI_INDEX_ID=
VERTEX_AI_INDEX_ENDPOINT_ID=
DOCUMENT_AI_PROCESSOR_ID=

# AI Providers
# At least one API key is required for chat functionality
GOOGLE_GENERATIVE_AI_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# External Services
RESEND_API_KEY=

